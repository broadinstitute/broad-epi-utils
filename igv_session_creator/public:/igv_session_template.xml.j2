<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Session genome="{{ genome }}" locus="All" version="8">
    <Resources>
    {% for track in tracks %}
        <Resource path="{{ track.path }}" type="{{ track.type }}"/>
    {% endfor %}
    </Resources>

    <Panel height="289" name="DataPanel" width="1133">
    {% for track in tracks %}
        <Track attributeKey="{{ track.name }}"
               autoScale="false"
               clazz="org.broad.igv.track.DataSourceTrack"
               fontSize="10"
               id="{{ track.path }}"
               name="{{ track.name }}"
               renderer="BAR_CHART"
               visible="true"
               windowFunction="mean">
            <DataRange baseline="0.0"
                       drawBaseline="true"
                       flipAxis="false"
                       maximum="{{ track.max }}"
                       minimum="0.0"
                       type="LINEAR"/>
        </Track>
    {% endfor %}
    </Panel>

    <Panel height="286" name="FeaturePanel" width="1133">
        <Track attributeKey="Reference sequence"
               clazz="org.broad.igv.track.SequenceTrack"
               fontSize="10"
               id="Reference sequence"
               name="Reference sequence"
               sequenceTranslationStrandValue="+"
               shouldShowTranslation="false"
               visible="true"/>
        <Track attributeKey="Refseq Genes"
               clazz="org.broad.igv.track.FeatureTrack"
               colorScale="ContinuousColorScale;0.0;735.0;255,255,255;0,0,178"
               fontSize="10"
               groupByStrand="false"
               id="https://hgdownload.soe.ucsc.edu/goldenPath/mm10/database/ncbiRefSeq.txt.gz"
               name="Refseq Genes"
               visible="true"/>
    </Panel>

    <PanelLayout dividerFractions="0.5"/>

    <HiddenAttributes>
        <Attribute name="DATA FILE"/>
        <Attribute name="DATA TYPE"/>
        <Attribute name="NAME"/>
    </HiddenAttributes>
</Session>
